<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/w3">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/leftarrowwhite"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backArrow"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatar3"
            app:civ_border_color="@color/theme_iris_color"
            app:civ_border_width="2dp"/>

        <ImageView
            android:id="@+id/plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-35dp"
            app:srcCompat="@drawable/plus"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/edittext_bg"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:hint="Enter your Name"
                android:textColorHint="#B1B1B1"
                android:inputType="textPersonName"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="About :"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:textColor="@color/white"
                android:background="@drawable/edittext_bg"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:hint="About"
                android:textColorHint="#B1B1B1"
                android:inputType="textMultiLine|textLongMessage"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:textAllCaps="false"
            android:textSize="16sp"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/linear_bg"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/txtViewPP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:drawableLeft="@drawable/ic_privacy_24"
            android:drawablePadding="21dp"
            android:padding="10dp"
            android:text="Privacy Policy"
            android:fontFamily="@font/arial_rounded_bold"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtViewAboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:drawableLeft="@drawable/about"
            android:drawablePadding="21dp"
            android:padding="10dp"
            android:text="About Us"
            android:fontFamily="@font/arial_rounded_bold"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtViewInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:drawableLeft="@drawable/ic_person_add_24"
            android:drawablePadding="21dp"
            android:padding="10dp"
            android:text="Invite a Friend"
            android:fontFamily="@font/arial_rounded_bold"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtViewNoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:drawableLeft="@drawable/ic_notifications_24"
            android:drawablePadding="21dp"
            android:padding="10dp"
            android:text="Notifications"
            android:fontFamily="@font/arial_rounded_bold"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtViewHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:drawableLeft="@drawable/ic_baseline_support_agent_24"
            android:drawablePadding="21dp"
            android:padding="10dp"
            android:text="Help"
            android:fontFamily="@font/arial_rounded_bold"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>